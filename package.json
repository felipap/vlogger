{
  "name": "vlog-electron",
  "version": "1.0.0",
  "description": "A seamless vlogging app with screen recording capabilities",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"bun run watch:main\" \"bun run dev:renderer\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "build": "bun run build:main && bun run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dev:renderer": "vite",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:renderer": "vite build --watch",
    "electron:dev": "bun run build && electron .",
    "electron:pack": "bun run build && electron-builder",
    "electron:dist": "bun run build && electron-builder --publish=never",
    "start": "electron .",
    "clean": "rm -rf dist dist-electron"
  },
  "keywords": [
    "electron",
    "vlog",
    "screen-recording",
    "typescript",
    "react"
  ],
  "author": "Felipe",
  "license": "MIT",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "printWidth": 80,
    "semi": false
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.0.12",
    "@tailwindcss/vite": "^4.0.12",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.0.12",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@google/genai": "^1.22.0",
    "@google/generative-ai": "^0.24.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "electron-store": "^8.2.0",
    "lucide-react": "^0.544.0",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "source-map-support": "^0.5.21",
    "tailwind-merge": "^3.3.1",
    "whisper-node": "^1.1.1",
    "zod": "^4.1.11"
  },
  "build": {
    "appId": "com.felipap.vlogger",
    "productName": "Vlogger",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": "dir",
      "identity": null
    }
  }
}
